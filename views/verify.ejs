<% include partials/split/header %>

<div class="container" style="margin-top: 3% ">
    <div class="card card-login mx-auto mt-5" style="background:rgba(0, 0, 0, 0.5)">
      <div class="card-header ">
        <div class="container">
            <div class="row" >
              <img src="../images/logo.jpeg" class="img-responsive img-circle center"  alt="Logo of Ruchis" style="width:60%; height: 20%; margin-left: 20%; border-radius: 5%">
            </div>
          </div>
      </div>
        <div class="card-body">
          <div class="text-center mb-4">
            <h4 style="color:aliceblue">Check your email to verify</h4>
            <p style="color:aliceblue">Enter your user name to resend the link</p>
          </div>
          <form action="/verifyAgain" method="POST">
            <div class="form-group">
              <div class="form-label-group">
                <input type="text" name="username" id="inputEmail" class="form-control" placeholder="Enter User name" required="required" autofocus="autofocus">
                <label for="inputEmail">Enter User Name</label>
              </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Resend the link</button>
          </form>
          <div class="text-center">
            <a class="d-block small mt-3" href="/register" style="color:aliceblue">Register an Account</a>
            <a class="d-block small" href="/login" style="color:aliceblue">Login Page</a>
          </div>
        </div>
      </div>
    </div>
<% include partials/split/footer %>
