<% include partials/split/header %>

    <div class="container" style="margin-top: 3% ">
      <div class="card card-login mx-auto mt-5" style="background:rgba(0, 0, 0, 0.5)">
        <div class="card-header ">
          <div class="container">
              <div class="row" >
                <img src="../images/logo.jpeg" class="img-responsive img-circle center"  alt="Logo of Ruchis" style="width:60%; height: 20%; margin-left: 20%; border-radius: 5%">
              </div>
            </div>
        </div>
        <div class="card-body">
          
          <form action="/signin" method="POST">
            
            <div class="form-group">
              <div class="form-label-group">
                <input type="text" name="username" id="username" class="form-control" placeholder="User name" required="required" autofocus="autofocus">
                <label for="username">User name</label>
              </div>
            </div>
            <div class="form-group">
              <div class="form-label-group">
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required="required">
                <label for="inputPassword">Password</label>
              </div>
            </div>
            <div class="form-group">
              <div class="checkbox">
                <label>
                  <input type="checkbox" value="remember-me">
                  <span style="color:aliceblue">Remember Me </span>
                </label>
              </div>
            </div>
            <button class="btn btn-primary btn-block" type="submit" style="background-color: #e76482; border-color: #e76482">Login</button>
          </form>
          <div class="text-center">
            <a class="d-block small mt-3" href="/register"> <span style="color:aliceblue">Register an Account</span></a>
            <a class="d-block small" href="/forgot-password"> <span style="color:aliceblue">Forgot Password?</span> </a>
          </div>
        </div>
      </div>
    </div>

   <% include partials/split/footer %>
